<a href="{{ product.url }}" style="color: #000; text-decoration: none;">
  <div style="text-align: center ; border: 1px solid transparent; background-color: white;">
    <img src="{{ product.featured_image | image_url }}" alt="" style="width: 100%; height: 260px; object-fit: cover">
    <h3>{{ product.title }}</h3>

    <p>{{ product.price | money }}</p>
  </div>
</a>